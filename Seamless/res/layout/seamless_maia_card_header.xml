<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:paddingLeft="@dimen/seamless_metric_small"
    android:paddingRight="@dimen/seamless_metric_small"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/seamless_maia_card_header_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/seamless_metric_small"
        android:paddingTop="@dimen/seamless_metric_micro"
        android:paddingBottom="@dimen/seamless_metric_micro"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/seamless_maia_card_header_title"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="@android:color/black"
            android:gravity="left|center_vertical"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/seamless_maia_card_header_sponsor"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="12sp"
            android:textColor="@color/darkGrey"
            android:gravity="left|center_vertical"/>

    </LinearLayout>

</LinearLayout>