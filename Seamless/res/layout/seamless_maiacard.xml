<?xml version="1.0" encoding="utf-8"?>
<com.mobilike.seamless.lib.view.MaiaCardContainerView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:clickable="true"
    android:soundEffectsEnabled="true"
    android:padding="3px"
    android:background="@drawable/feed_fragment_item_bg">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <include
            layout="@layout/seamless_maiacard_header"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8" />

        <include
            layout="@layout/seamless_maiacard_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1" />

        <include
            layout="@layout/seamless_maiacard_banner"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginRight="3px"
            android:layout_marginLeft="3px"
            android:layout_weight="2.5" />

        <include
            layout="@layout/seamless_maiacard_footer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginRight="3px"
            android:layout_marginLeft="3px"
            android:layout_marginBottom="3px"
            android:layout_weight="1.1" />

    </LinearLayout>

</com.mobilike.seamless.lib.view.MaiaCardContainerView>